{
  "name": "friendship_v2",
  "version": "1.0.0",
  "description": "Make Friendship backend clean",
  "main": "src/server.js",
  "repository": "https://github.com/chengjo0/friendship-backend.git",
  "author": "John Cheng",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.269.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "boom": "^7.2.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "expo-server-sdk": "^2.4.0",
    "glue": "^5.0.0",
    "hapi": "^17.5.2",
    "hapi-auth-jwt2": "^8.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "pg": "^7.4.3",
    "prompt": "^1.0.0",
    "simple-fixtures": "^1.0.1",
    "socket.io": "^2.1.1",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "vision": "^5.3.3",
    "inert": "^5.1.0",
    "hapi-swagger": "^9.1.1",
    "white-out": "^2.0.2"
  },
  "devDependencies": {
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "moment-random": "^1.0.4",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "watch": "cross-env NODE_ENV=development nodemon --exec babel-node src/server.js",
    "build": "mkdir -p dist && babel src --out-dir dist --source-maps",
    "babel-node": "babel-node --presets=/*a*/ --ignore='foo|bar|baz'",
    "precommit": "lint-staged",
    "register:admin": "babel-node bin/register_admin.js",
    "db:migrate": "node_modules/.bin/knex --knexfile db/knexfile.js migrate:latest",
    "db:rollback": "node_modules/.bin/knex --knexfile db/knexfile.js migrate:rollback",
    "db:seed": "node_modules/.bin/knex --knexfile db/knexfile.js seed:run",
    "db:wipe": "babel-node bin/wipe_db.js",
    "db:init": "npm run db:wipe && npm run db:migrate && npm run db:seed"
  }
}
